{
  "compilerOptions": {
    "target": "ES2021",
    "lib": [
      "es2021",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "allowUmdGlobalAccess": false,
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "cypress",
    "cypress.*",
    "dist"
  ]
}
